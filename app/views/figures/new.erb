<form method="POST" action="/figures">
  <br />
  <label for="figure[name]">Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" />
  <br />
  <label for="figure[name]">Figure Titles: </label>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_id" value="<%=title.id%>"><%=title.name%></input>
  <%end%>

  <br />
  <label for="figure[name]">Landmarks to Figure:</label>
  <%Landmark.all.each do |lm|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_id" value="<%=lm.id%>"><%=lm.name%></input>
  <%end%>
  <input type="submit" value="Create Figure" id="Create Figure" />
</form>
