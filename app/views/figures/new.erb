<form method="POST" action="/figures">
  <label for="figure[name]">Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" />
  <br />
  <label for="figure[name]">Figure Titles: </label>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input>
  <%end%>
  <h5>Create a New Title:</h5>
  <input type="text" name="title[name]" id="new_title" />


  <br />
  <label for="figure[name]">Landmarks:</label>
  <%Landmark.all.each do |lm|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=lm.id%>" value="<%=lm.id%>"><%=lm.name%></input>
  <%end%>
  <br />
  <h5>Create New Landmark: </h5>
  <label for="landmark[name]">New Landmark Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark" />
  <label for="landmark[year_completed]">Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed" />
  <input type="submit" value="Create Figure" id="Create New Figure" />
</form>
